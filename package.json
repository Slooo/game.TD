{
  "name": "heroes",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "dependencies": {},
  "devDependencies": {
    "@olavoparno/jest-badges-readme": "^1.4.1",
    "@types/jest": "^25.2.1",
    "css-loader": "^6.7.3",
    "jest": "^25.2.7",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^25.3.1",
    "ts-loader": "^9.4.2",
    "typescript": "^3.8.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "watch": "webpack --watch",
    "build": "webpack",
    "start": "webpack-dev-server --open",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prebuild": "echo false > .buildstatus",
    "postbuild": "echo true > .buildstatus",
    "make-badges": "node_modules/.bin/jest-badges-readme --coverageDir='./coverage'",
    "make-readme": "npm run test:coverage && npm run make-badges"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^components": "<rootDir>/src/components"
    }
  },
  "author": "Slooo <borisworking@gmail.com>",
  "license": "ISC"
}
